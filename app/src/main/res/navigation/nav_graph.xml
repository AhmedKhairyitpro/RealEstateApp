    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_gragh"
    app:startDestination="@id/departmentDetailsFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.abdelazim.x.aqardemo.view.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_departmentDetailsFragment"
            app:destination="@id/departmentDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/departmentDetailsFragment"
        android:name="com.abdelazim.x.aqardemo.view.ApartmentDetailsFragment"
        android:label="fragment_department_details"
        tools:layout="@layout/fragment_apartment_details" />
    <fragment
        android:id="@+id/contactUsFragment"
        android:name="com.abdelazim.x.aqardemo.view.ContactUsFragment"
        android:label="fragment_contact_us"
        tools:layout="@layout/fragment_contact_us" />
    <fragment
        android:id="@+id/wishListFragment"
        android:name="com.abdelazim.x.aqardemo.view.WishListFragment"
        android:label="fragment_wish_list"
        tools:layout="@layout/fragment_wish_list" />
